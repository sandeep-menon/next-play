generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  username String @unique
  password String @unique
  initials String
  userConfig Json
  createdAt DateTime @default(now())
}

model TwitchToken {
  id Int @id
  token String
  expiry DateTime
}